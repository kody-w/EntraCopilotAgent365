{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Copilot Agent 365",
  "version": "1.0.0",
  "identifier": "com.rappai.copilot-agent-365",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "",
    "beforeBuildCommand": ""
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Copilot Agent 365",
        "width": 1200,
        "height": 800,
        "minWidth": 400,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": false,
        "center": true,
        "focus": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://cdnjs.cloudflare.com https://cdn.jsdelivr.net https://aka.ms; style-src 'self' 'unsafe-inline' https://cdnjs.cloudflare.com https://fonts.googleapis.com; font-src 'self' https://cdnjs.cloudflare.com https://fonts.gstatic.com data:; img-src 'self' data: blob: https:; connect-src 'self' https: wss:; media-src 'self' blob:; worker-src 'self' blob:;"
    },
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "RappAI",
    "category": "Productivity",
    "shortDescription": "AI-powered chat assistant desktop client",
    "longDescription": "Copilot Agent 365 is a powerful AI assistant desktop client that connects to Azure-hosted agent services. Features include multi-endpoint support, voice synthesis, conversation memory, and more.",
    "copyright": "Copyright Â© 2025 RappAI",
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "10.15",
      "exceptionDomain": "",
      "signingIdentity": null,
      "providerShortName": null,
      "entitlements": null
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    }
  },
  "plugins": {
    "fs": {
      "scope": {
        "allow": ["$APPDATA/**", "$HOME/**", "$DOWNLOAD/**"]
      }
    },
    "http": {
      "scope": {
        "allow": [
          { "url": "https://*.azurewebsites.net/**" },
          { "url": "https://*.azure.com/**" },
          { "url": "https://*.github.dev/**" },
          { "url": "https://*.cognitiveservices.azure.com/**" },
          { "url": "https://speech.platform.bing.com/**" },
          { "url": "http://localhost:*/**" },
          { "url": "http://127.0.0.1:*/**" }
        ]
      }
    },
    "shell": {
      "open": true
    }
  }
}
